.content
  &__grid
    display flex
    flex-direction column
    height 100%
    min-height 100vh
    max-height 175vh
    padding-top 24px
    margin-top -20px
    margin-left -24px
    flex-wrap wrap
    @media(max-width: 1360px)
      max-height 160vh
  &__cell
    box-sizing: border-box;
    padding-left 24px
    padding-top 20px
    width 50%
  &__list
    margin-top 16px
  &__item:not(:first-child)
    margin-top 12px
  &__cards
    margin-top 24px
  &__card:not(:first-child)
    margin-top 20px
