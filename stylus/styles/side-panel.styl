.side-panel
  position fixed
  box-sizing border-box
  width 80px
  height 100vh
  padding 6px 16px 16px 16px
  background-color color-light-grey
  display flex
  flex-direction column
  border-right 1px solid color-grey
  &__logo
    display block
    box-sizing border-box
    height 54px
    width 48px
    background url(../img/logo.svg) no-repeat 50% 12px
    background-size 36px auto
    border-bottom 1px solid color-grey
  &__content
    margin-top 16px
    display flex
    flex-direction column
    flex-grow 1
    justify-content space-between
    *+*
      margin-top 12px
  &__link
    position relative
    width 48px
    height 48px
    display block
    &:before
      left 50%
      top 50%
      transform translate(-50%,-50%)
      height 16px
      width 16px
      position absolute
    &_accent
      &:after
        content ""
        display block
        position absolute
        box-shadow 0px 2px 12px rgba(34, 34, 34, 0.2)
        top 2px
        left 2px
        border-radius 50%
        background-color color-accent-active
        width 8px
        height 8px
