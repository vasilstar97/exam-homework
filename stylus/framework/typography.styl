.page
  font-family font-main
  font-size 20px
  line-height 20px
  &_title
    font-weight 600
  &_subtitle
    font-weight 400

h1
  font-family font-main
  font-weight 600
  font-size 36px
  line-height 44px
  letter-spacing -2%
  @media (max-width: 1360px)
    font-size 32px
    line-height 40px

h2
  font-family font-main
  font-weight 500
  font-size 32px
  line-height 40px
  letter-spacing -2%
  @media (max-width: 1360px)
    font-size 24px
    line-height 32px

button
  font-family font-main
  font-weight 400
  font-size 18px
  line-height 20px
  @media (max-width: 1360px)
    font-size 14px
    line-height 14px

.caption
  font-family font-main
  letter-spacing -2%
  &_l
    font-size 18px
    line-height 24px
    @media (max-width: 1360px)
      font-size 16px
      line-height 20px
  &_m
    font-size 16px
    line-height 20px
    @media (max-width: 1360px)
      font-size 14px
      line-height 18px
  &_s
    font-size 14px
    line-height 18px
    @media (max-width: 1360px)
      font-size 12px
      line-height 14px
  &_light
    font-weight 300
  &_regular
    font-weight 400
  &_medium
    font-weight 500

.body
  font-family font-main
  font-size 18px
  line-height 26px
  font-weight 400
  &_regular
    font-weight 400
  &_semibold
    font-weight 600
  p+p
    margin-top 8px
